<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entities.servicePetition.ServicePetitionDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/returnIcon"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_left_arrow"
            app:srcCompat="@drawable/ic_left_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/petitionImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@android:drawable/ic_menu_gallery" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:orientation="vertical">

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/petitionServiceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textColor="#a9a9b0"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <customfonts.MyTextView_SF_Pro_Display_Bold
                    android:id="@+id/petitionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre de la peticion"
                    android:textColor="#3b3b3b"
                    android:textSize="23sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="21dp"
                android:background="#1A979797" />

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/petitionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:minHeight="100dp"
                android:text="Este lugar seria donde se encuentra la descripcion de la solicitud lorem cosa ipsum dolor sit amet en nombre del patris el philis espiritu santis"
                android:textColor="#a9a9b0"
                android:textSize="12.3sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="#A3979797" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/petitionUserImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/profile" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <customfonts.MyTextView_SF_Pro_Display_Semibold
                    android:id="@+id/petitionUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario nombre"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyTextView_SF_Pro_Display_Semibold
                    android:id="@+id/btnOfferCreation"
                    android:layout_width="74dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rect_blue"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="8dp"
                    android:text="Ofertar"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>