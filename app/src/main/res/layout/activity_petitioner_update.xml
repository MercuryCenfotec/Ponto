<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entities.petitioner.PetitionerUpdateActivity">

    <ImageView
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goBack"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_left_arrow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPetitionerProfile"
        android:layout_width="131dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPetitionerCameraIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="124dp"
        android:onClick="askCameraPermissions"
        app:layout_constraintEnd_toEndOf="@+id/imgPetitionerProfile"
        app:layout_constraintStart_toStartOf="@+id/imgPetitionerProfile"
        app:layout_constraintTop_toTopOf="@+id/imgPetitionerProfile"
        app:srcCompat="@drawable/ic_camera_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <customfonts.EditText__SF_Pro_Display_Medium
            android:id="@+id/idUpdPetEditText"
