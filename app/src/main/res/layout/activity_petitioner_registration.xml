<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03749C"
    tools:context=".entities.petitioner.PetitionerRegistrationActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="73dp"
        android:layout_height="169dp"
        android:alpha="0.2"
        android:src="@drawable/logo_ponto"
        android:tint="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/layoutPetReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutPetReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <customfonts.MyTextView_SF_Pro_Display_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Registro solicitante"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <customfonts.EditText__SF_Pro_Display_Medium
            android:id="@+id/identificationPetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect"
            android:hint="Número de cédula"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="13.5sp" />

        <customfonts.EditText__SF_Pro_Display_Medium
            android:id="@+id/fullNamePetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect"
            android:hint="Nombre completo"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="13.5sp" />


        <customfonts.EditText__SF_Pro_Display_Medium
            android:id="@+id/birthDatePetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect"
            android:focusable="false"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="13.5sp" />

        <customfonts.EditText__SF_Pro_Display_Medium
            android:id="@+id/emailPetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="13.5sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfonts.EditText__SF_Pro_Display_Medium
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="41dp"
                android:background="@drawable/rect"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="13dp"
                android:paddingBottom="14dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="13.5sp" />

            <ImageView
                android:id="@+id/imgViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtPassword"
                android:layout_alignEnd="@+id/txtPassword"
                android:layout_alignRight="@+id/txtPassword"
                android:layout_alignBottom="@+id/txtPassword"
                android:layout_marginRight="16dp"
                android:onClick="showHidePass"
                android:src="@drawable/ic_eye" />

        </RelativeLayout>

        <customfonts.MyTextView_SF_Pro_Display_Medium
            android:id="@+id/btnRegisterPetitioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_white"
            android:onClick="prePetitionerRegistration"
            android:paddingLeft="48dp"
            android:paddingTop="11dp"
            android:paddingRight="48dp"
            android:paddingBottom="11dp"
            android:text="Registrarme"
            android:textAllCaps="false"
            android:textColor="#3b3b3b"
            android:textSize="13.5sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>